{
    "device-name": "Espressor App",
    "device-type": "Espressor",
    "buffers-count": 1,
    "input-buffers":{
        "1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XPOST 'http://127.0.0.1:8080/'",
            "buffer-tokens":[
            {
                "name":"Espressor options",
                "description":"",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "[a-zA-Z]*",
                "optional": false
            },
            {
                "name":"Espressor option parameter key",
                "description": "Parameter key for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*",
                "optional": false
            },
            {
                "name":"Espressor option parameter value",
                "description": "Parameter value for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*",
                "optional": false
            }
            ]
        }
    },
    "output-buffers":{
        "1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:8080/'",
            "buffer-tokens":[
            {
                "name":"Espressor options",
                "description":"",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "[a-zA-Z]*",
                "optional": false
            },
            {
                "name":"Espressor options parameter",
                "description": "Parameters for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*",
                "optional": true
            }
            ]
        }
    }
}



